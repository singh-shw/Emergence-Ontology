For Template:
SELECT ?def
WHERE {{
    ?author rdf:type BASE:Author .
    ?author BASE:hasName ?name .
    ?author BASE:publishes ?paper .
    ?paper BASE:hasDefinition ?def .
    FILTER regex(?name, "{author_name}")
}}

